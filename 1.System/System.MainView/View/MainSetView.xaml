<Window x:Class="System.MainView.View.MainSetView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System.MainView.View"
        xmlns:controls="clr-namespace:System.ICore.Control;assembly=System.ICore"
        mc:Ignorable="d"
        Title="MainSetView" 
        Height="300" Width="350"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="#00FFFFFF" AllowsTransparency="True"  FontWeight="Medium" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary  Source="/System.ICore;component/Resoure/DictionaryMain.xaml" />
                <!--<ResourceDictionary Source="/System.ICore;component/Resource/ButtonEx.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border   BorderThickness="1" Background="White" BorderBrush="{DynamicResource MainColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="26"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"  MouseMove="TitleBar_MouseMove" Background="{ DynamicResource MainColor}"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"  Margin="0,0,10,0" HorizontalAlignment="Left"  Orientation="Horizontal">
                    <Image  Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="主界面管理" FontSize="15"  VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Grid.Column="1"  Margin="0,0,10,0" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Width="24" Height="24"  Cursor="Hand" Click="btn_close_Click">
                        <Button.Template>
                            <ControlTemplate>
                                <Grid Background="Transparent">
                                    <Line Width="15" Height="15" X1="0" Y1="0" X2="15" Y2="15" StrokeThickness="3" Stroke="Black" ></Line>
                                    <Line Width="15" Height="15" X1="15" Y1="0" X2="0" Y2="15" StrokeThickness="3" Stroke="Black" ></Line>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="1"  >
                <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <StackPanel   HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Margin="12">
                        <TextBlock Text="标题栏:" FontSize="12"  VerticalAlignment="Center" />
                        <TextBox  Margin="5,0,0,0"  Style="{StaticResource stlTextBox}" Foreground="Black"   Width="250" Height="35"  
                                  Validation.ErrorTemplate="{StaticResource ValidationTemplate}">
                            <TextBox.Text>
                                <Binding Path="Config.Title" Mode="TwoWay"  UpdateSourceTrigger="PropertyChanged">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel   HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Margin="12">
                        <TextBlock Text="窗口宽:" FontSize="12"  VerticalAlignment="Center" />
                        <TextBox  Margin="5,0,0,0"  Style="{StaticResource stlTextBox}" Foreground="Black"   Width="250" Height="35"  
     Validation.ErrorTemplate="{StaticResource ValidationTemplate}">
                            <TextBox.Text>
                                <Binding Path="Config.ScreenWidth" Mode="TwoWay"  UpdateSourceTrigger="PropertyChanged">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>


                    <StackPanel   HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Margin="12">
                        <TextBlock Text="窗口高:" FontSize="12"  VerticalAlignment="Center" />
                        <TextBox  Margin="5,0,0,0"  Style="{StaticResource stlTextBox}" Foreground="Black"   Width="250" Height="35"  
     Validation.ErrorTemplate="{StaticResource ValidationTemplate}">
                            <TextBox.Text>
                                <Binding Path="Config.ScreenHeight" Mode="TwoWay"  UpdateSourceTrigger="PropertyChanged">
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <controls:ButtonEx  Margin="60,15,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" ButtonType="IconText" Icon="pack://application:,,,/System.ICore;Component/Image/Save.png" Command="{Binding SaveConfigCommand}" Content="保存"  Background="#FF6EBE28" Width="240" Height="35"  FontSize="14"/>
                </WrapPanel>
            </Grid>
                
            </Grid>
    </Border>
</Window>
